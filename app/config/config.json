{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 3333,
  "microservice": {
    "name": "microservice-template"
  },
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "1mb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "20mb"
    },
    "cors": false
  }
}
