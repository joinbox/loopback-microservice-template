{
  "name": "loopback-microservice-template",
  "version": "0.0.1",
  "description": "Template for loopback microservice projects",
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.0.0"
  },
  "keywords": [
    "Loopback",
    "microservice",
    "template"
  ],
  "scripts": {
    "start": "node .",
    "lint": "node_modules/.bin/eslint .",
    "test:base": "mocha --recursive --check-leaks --full-trace --exit",
    "test:unit": "npm run test:base ./test/support/setup/unit.js ./test/unit",
    "test:integration": "npm run test:base ./test/support/setup/integration.js ./test/integration",
    "test": "npm run test:base ./test/support/setup/integration.js ./test/integration ./test/unit"
  },
  "dependencies": {
    "@joinbox/loopback-component-angular-sdk": "^2.0.0",
    "@joinbox/loopback-component-custom-headers": "git+https://github.com/joinbox/loopback-component-custom-headers.git#develop",
    "@joinbox/loopback-component-permission-tree": "git+https://github.com/joinbox/loopback-component-permission-tree.git#feature/create-endpoint",
    "@joinbox/loopback-component-relation-filter": "git+https://github.com/joinbox/loopback-component-relation-filter.git#master",
    "compression": "^1.0.3",
    "cors": "^2.5.2",
    "helmet": "^1.3.0",
    "loopback": "^3.18.2",
    "loopback-boot": "^2.6.5",
    "loopback-component-explorer": "^5.0.0",
    "loopback-component-jb-migration": "github:joinbox/loopback-component-jb-migration#initial-setup",
    "loopback-connector-postgresql": "^3.3.0",
    "loopback-microservice": "git+https://github.com/joinbox/loopback-microservice.git#initial-setup",
    "serve-favicon": "^2.0.1",
    "strong-error-handler": "^2.3.1",
    "yargs": "^10.1.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.17.0",
    "eslint-config-joinbox": "git+https://github.com/joinbox/joinbox-linter-configuration.git",
    "loopback-cli": "^4.1.0",
    "loopback-dummy-project": "^1.1.0",
    "mocha": "^4.1.0",
    "nsp": "^2.1.0",
    "superagent": "^3.8.2"
  }
}
